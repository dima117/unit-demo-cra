{
	"extends": [
		"react-app",
		"react-app/jest"
	],
	"rules": {
		"testing-library/prefer-screen-queries": "off",
		"testing-library/no-debugging-utils": "off",
		"@typescript-eslint/no-unused-vars": "off"
	},
	"ignorePatterns": [
		"e2e/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	]
}
